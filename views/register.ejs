<h1>Register with Nice Paper</h1>

<% if(typeof registered == 'object' && registered) { %>
<div id="renderOwner">Congratulations, <%= registered[0].first_name_1 %> and <%= registered[0].first_name_2 %>, you're registered!</div>
<% } %>

<form id="newOwner" action="" method="post">
  <label for="email">Email:</label>
  <input type="text" id="email" name="email" placeholder="Enter your email" required>
  <br>
  <label for="password">Password:</label>
  <input type="text" id="password" name="password" placeholder="Create a password" required>
  <br>
  <label for="first_name_1">First First Name:</label>
  <input type="text" id="first_name_1" name="first_name_1" placeholder="Please enter the first name of the first person" required>
  <br>
  <label for="last_name_1">First Last Name:</label>
  <input type="text" id="last_name_1" name="last_name_1" placeholder="Please enter the last name of the first person" required>
  <br>
  <label for="first_name_2">Second First Name:</label>
  <input type="text" id="first_name_2" name="first_name_2" placeholder="Please enter the first name of the second person" required>
  <br>
  <label for="last_name_2">Second Last Name:</label>
  <input type="text" id="last_name_2" name="last_name_2" placeholder="Please enter the last name of the second person" required>
  <br>
  <label for="username">Username:</label>
  <input type="text" id="username" name="username" placeholder="Please enter a username" required>
  <br>
  <label for="wedding_date">Tentative Wedding Date:</label>
  <input type="date" id="wedding_date" name="wedding_date" placeholder="Please enter your tentative wedding date (this field is optional)">

  <button type="submit" id="registerOwner">Submit</button>
</form>
