<% if (typeof msg == 'string' && msg) { %>
  <h2><%= msg %></h2>
<% } %>

<h1>Log in to Nice Paper</h1>

<form id="loginForm" action="" method="post">
  <label for="email">Email/Username:</label>
  <input type="text" id="email" name="email" placeholder="Enter your email or username">
  <br>
  <label for="password">Password:</label>
  <input type="password" minlength="8" maxlength="19" id="password" name="password" placeholder="Enter your password">
<button type="submit" id="loginBtn">Login</button>
</form>
